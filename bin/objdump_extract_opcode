#!/usr/bin/env python
import sys
import re
import argparse

usage = """
Error!

Usage:  objdump -d <shellcode.o> | python objdump_extract_opcode

"""

valid_line_rgx = re.compile(r"^[ ]*[0-9a-f]*:.*$")

def valid_line(line):
    return valid_line_rgx.match(line)


def get_code(line):
    s = line.split(":")[1].lstrip()
    s = s.split("\t")[0].rstrip()
    s = s.split(" ")

    c = []

    for o in s:
        c.append("\\x" + str(o).upper())
    
    return c


if __name__ == "__main__":
    parser = argparse.ArgumentParser()
    parser.add_argument("-l", "--little-endian", action="store_true", default=False)

    args = parser.parse_args()

    if not sys.stdin.isatty():
        try:
            code = []

            while True:
                line = sys.stdin.readline()

                if not line:
                    break

                if not valid_line(line):
                    continue

                c = get_code(line)
                
                code += c

            length = len(code)
            
            if args.little_endian:
                code = reversed(code)

            code_str = "".join(code)

            print "\n" + code_str
            print "\nLength: " + str(length)
            print "\n"

            if length == 69:
                print "69 xd\n"
            elif length == 420:
                print "blaze et\n"

        except Exception as e:
            print e
            print usage 
            exit(1)
    else:
        print usage
